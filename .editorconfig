# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{config,cs,xml}]
indent_size = 4

[*.{proj,props,sln,targets}]
indent_style = tab
indent_size = 4

[*.{csproj}]
indent_size = 2

[*.java]
indent_size = 4

[*.html]
indent_size = 2

[*.css]
end_of_line = lf

[*.json]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.py]
indent_size = 4
